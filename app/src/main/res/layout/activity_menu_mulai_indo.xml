<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_login"
    android:layout_width="match_parent"
    android:layout_height="624dp"
    android:background="#ffffff"
    tools:context="kranji.abcd.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_logo_indonesia"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/indonesia_logo"
            />
    </LinearLayout>

        <ImageView
            android:id="@+id/img_huruf_indonesia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/huruf_indo"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"/>



        <ImageView
            android:id="@+id/img_angka_indonesia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/angka_indo"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            />

            <ImageView
                android:id="@+id/img_keluar_indonesia"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/kembali"
                android:layout_marginTop="430dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                />










</RelativeLayout>
